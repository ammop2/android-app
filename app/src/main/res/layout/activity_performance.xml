<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bfh.ch.androidapp.PerformanceActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/SimulateOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simulate_1" />
        <Button
            android:id="@+id/SimulateThen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simulate_10" />
        <Button
            android:id="@+id/Simulate15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simulate_15" />
        <Button
            android:id="@+id/Simulate20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simulate_20" />
        <Button
            android:id="@+id/Simulate30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simulate_30" />
        <Button
            android:id="@+id/SimulateHundred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simulate_100" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>